%h3 Friends

%ul.friends-list
-current_user.friends.each do |friend|
  %li
    = friend.name + " -"
    = friend.city + ","
    = friend.state
    = link_to "edit", edit_friend_path(friend)
    = link_to "delete", friend, :confirm => "Are you sure?", :method => :delete

%p= link_to "Add a friend", new_friend_path
