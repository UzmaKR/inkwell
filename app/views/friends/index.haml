%h3 Friends

= link_to "Add a friend", new_friend_path, class: "button round"
-if current_user.authenticated_with_facebook?
  =link_to 'Add friends from Facebook', '/friends/facebook', :class => 'facebook-add-friends-link button round'
-else
  =link_to 'Connect to Facebook', '/users/auth/facebook', :class => 'button round'
%ul.friends-list
  =render @friends


