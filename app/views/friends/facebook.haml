-current_user.get_facebook_friends.each do |friend|
	%form{ :controller => 'friend', :action => 'add_facebook_friends', :method => 'post', :remote => true}
		%input{ :type => "text", :name => "name", :value=> friend['name'] }
		%input{ :type => "text", :name => "birthday", :value=> friend['birthday'] }
		%input{ :type => "submit", :name => "submit", :value => "add friend" }